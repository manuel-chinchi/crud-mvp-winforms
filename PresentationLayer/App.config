<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <connectionStrings>
    <!-- NOTE: The character '\' is taken as '\\' when you want to read the raw string -->
    <add name="cs_mssql" connectionString="Server=(localdb)\MSSQLLocalDB; DataBase=crud_mvp_winforms; Integrated Security=true" 
         providerName="System.Data.SqlClient"/>
    <add name="cs_sqlite" connectionString="Data Source=|DataDirectory|Repositories\Providers\SQLite\App_Data\crud_mvp_winforms.db" providerName="System.Data.SQLite"/>
  </connectionStrings>

  <!--database to use-->
  <appSettings>
    <add key="DatabaseType" value="SQLite"/>
    <!--<add key="DatabaseType" value="MSSQL"/>-->
  </appSettings>
</configuration>